@model CRUD_MVC5Collection.Models.Employ
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<table>
    @using (Html.BeginForm())
    {
        <tr>
            <td>Employ Id</td>
            <td>@Html.TextBoxFor(m => m.Id) </td>
        </tr>
        <tr>
            <td>Name</td>
            <td>@Html.TextBoxFor(m => m.Name) </td>
        </tr>
        <tr>
            <td>Salary</td>
            <td>@Html.TextBoxFor(m => m.Salary) </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Add" /> </td>
        </tr>
    }

</table>

@if (ViewBag.Message != null)
            {
                <h2>@ViewBag.Message</h2>
            }

<h2>@Html.ActionLink("View All","Index")</h2>